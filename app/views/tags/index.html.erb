<div class="tags flexible">
    <h2>All Tags</h2>
    <% if user_signed_in? %>
        <%= link_to "New Tag", new_tag_path %>
    <% end %>
    <%= link_to "Search Tags", tags_search_path %>
    <div>
        <% if @tags.length == 0%>
            <span>Appears to be empty at the moment</span>
        <% else %>
            <%= render @tags %>
        <% end %>
    </div>
</div>