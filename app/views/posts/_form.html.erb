<%= form_with model: @post, local: true do |form| %>

  <%= render "shared/error_explanation", model: @post%>
  <div class="post-new-field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="post-new-field">
    <%= form.label :tldr, "TLDR" %><br>
    <%= form.text_area :tldr %>
  </div>

  <div class="post-new-field">
    <%= form.label :text %><br>
    <%= form.rich_text_area :text %>
  </div>

  <div class="post-new-field">
    <%= form.label :tags %><br>
    <%= form.text_field :tags, value:  @post.tags.map {|tag| tag.name}.join(", "), name: "tags" %>
  </div>

  <%= form.submit %>

<% end %>