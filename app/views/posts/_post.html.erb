<div class="post-preview">
    <%= link_to post_path(post), class: "post-preview-link" do %>
        <h2><%= post.title %></h2> -
        <span class="post-preview-time">
            <%= post.updated_at.strftime("%m/%d/%Y | %I:%M %P") %>
        </span>
    <% end %>
    <div class="post-preview-tags">
        <%= render post.tags %>
    </div>
    <p><%= post.tldr %></p>
</div>